<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>

<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<style>
	td{
		text-align: center;
	}
</style>
<title>添加部门</title>
</head>
<body>
	<form action="list" method="post">
		<table align="center">
			<tr>
				<td>部门名称：</td>
				<td><input type="text" name="departmentName" value="${searchParames.departmentName }"/></td>
				<td>部门负责人：</td>
				<td><input type="text" name="mt" value="${searchParames.mt }" /></td>
			</tr>
			<tr>
				<td>部门id:</td>
				<td><input type="text" name="id" value="${searchParames.id }"  /></td>
				<td>部门人员:</td>
				<td><input type="text" name="eployeName" value="${searchParames.eployeName }" /></td>
			</tr>
			<tr>
				<td></td>
				<td></td>
				<td></td>
				<td>
					<button>查询</button> <button type="button" onclick="resetSearch();"/>清空</button>
				</td>
			</tr>
		</table>
	</form>
	<table class="table table-striped table-bordered table-condensed">
		<tr>
			<td>序号</td>
			<td>部门ID</td>
			<td>部门名称</td>
			<td>部门人员名单</td>
			<td>部门负责人</td>
			<td>操作</td>
		</tr>
		<c:forEach var="list" items="${departmentList }" varStatus="status">
			<tr>
				<td>${status.index+1 }</td>
				<td>${list.id }</td>
				<td>${list.name }</td>
				<td>
				<c:forEach var="employees" items="${list.es }" varStatus="status">
						${employees.name }
					</c:forEach>
				</td>
				<td>${list.mt }</td>
				<td>
					<a href="viewPage/${list.id }">查看</a>
					<a href="editPage/${list.id }">编辑</a>
				</td>
			</tr>
		</c:forEach>
	</table>
<script>
	function resetSearch() {
		$("input").val('');
	}
</script>
</body>
</html>