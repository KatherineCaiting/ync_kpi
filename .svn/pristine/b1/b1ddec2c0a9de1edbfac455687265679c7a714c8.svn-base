<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>

<html>
<head>
	<title>效能-项目页面</title>
	<!-- 时间控件 css  -->
	<link rel="stylesheet" type="text/css" href="${ctx}/static/My97/skin/WdatePicker.css" />
	<!-- 时间控件js  -->
	<script type="text/javascript" src="${ctx}/static/My97/WdatePicker.js"></script>
	
	<script type="text/javascript" src="${ctx}/static/jquery/jquery-1.9.1.min.js"></script>
	<!--  部门查询-->
	<script type="text/javascript" src="${ctx}/static/custom/depar.js"></script>
	
	<script type="text/javascript">
		$(function () { 
			startPlugin.init("${ctx}");
			startPlugin.startInit();
			startPlugin.startInitParam({
				departmentId:"department_id"
			});
		});
		
		
		var i = 0;
		//alert(i);
		function addValueFun(){  
			i = $("#tags").find("select").length;
			
			var str = "<tr>"
							+"<td>"+i+"</td>"
							+"<td><select id='department_id_"+i+"' onchange='empFun(this.id)' name='departmentIdBos["+i+"]'><option>--请选择--</option></select></td>"
							+"<td><select id='employe_id_"+i+"' name='employeIdBos["+i+"]'><option>--请选择--</option></select></td>"
							+"<td>"
								+"周期："
						   	   	+"<input class='Wdate' onFocus='WdatePicker({lang:\"zh-cn\",dateFmt:\"yyyy-MM-dd\"})'"
								+"type='text' name='planBeginTimes["+i+"]' />"
								+"-"
								+"<input class='Wdate' onFocus='WdatePicker({lang:\"zh-cn\",dateFmt:\"yyyy-MM-dd \"})' "
								+"type='text' id='' name='planEndTimes["+i+"]' />&nbsp;"
								+"工时：<input type='text' id='' name='planHoursBos["+i+"]' class='input-large required' minlength='1'/>"
							+"</td>"
							+"<td>1</td>"
						+"</tr>";
						startPlugin.startInitParam({
							departmentId:"department_id_"+i
						});
			$("#tags").append(str);
			i++;
		   
		} 
		
		function empFun(dep_id){
			var t = dep_id;
			var h = $("#"+t).find("option:selected").val();
			var first=$("#"+t );
			var second=first.parent().next().find('select')[0].id;
			
			if("" != t  ){
				$.ajax({ 
			        type: "GET", 
			       	url: "${ctx}/employe/listAjax?departmentId="+h, 
			        dataType:"json", 
			        success: function(data){ 
			        		$("#"+second).html("");
			        	 	var tml = "<option  value = ''>--请选择--</option>"
				             $.each(data, function(){
				                tml += "<option value= "+this.id+">"+this.name+"</option>" ;
				             });
			        	 	$("#"+second).html(tml);
			        } ,
				});
			}
		}
		
		
	</script>
</head>

<body>
	<form id="" action="${ctx}/efficiency/edit" method="post" >
		<div class="control-group">
			<label for="" class="control-label">项目名称:</label>
			<div class="controls">
				<input type="text" id="" name="projectNameBo" value="${project.name }" class="input-large required" minlength="3"/>
				<input type ="text" id="" name="proId" value="${project.id }" />
			</div>
		</div>	
		
		<br/><input type='button' value='添加相关人员' onclick='addValueFun()' class="btn"/>
		<table class="table table-striped table-bordered table-condensed">
			<thead>
			   <tr>
			   		<td>序号</td>
			   		<td>部门</td>
			   		<td>姓名</td>
			   		<td>计划时间</td>
			   		
			   		<td>操作</td>
			   </tr>
		   	</thead>
		   	<tbody id="tags"> 
		   		<c:forEach items="${list}" var="listTemp" varStatus="s" >
				   	 <tr>
				   	   	<td>0</td>
				   	   	<td>
				   	   		<select id="department_id_${s.index}"  onchange="empFun(this.id)"  name="departmentIdBos[${s.index}]">
								<option value = "">--请选择--</option>
								<c:forEach items="${departmentList}" var="temp" varStatus="x" >
										<c:choose>
										 <c:when test="${listTemp.departmentId == temp.id}">
											<option vaule="${temp.id}" selected="selected">${temp.name}</option>
										</c:when> 
										<c:otherwise> 
											<option vaule="${temp.id}" >${temp.name}</option>
										</c:otherwise> 
									</c:choose>
								</c:forEach>
							</select>
						</td>
				   	   	<td>
							<select id="employe_id_${s.index}"  name="employeIdBos[${s.index}]">
								<option>--请选择--</option>
								<c:forEach items="${listTemp.employeList}" var="temp_em" varStatus="x" >
										<c:choose>
										 <c:when test="${listTemp.employeId == temp_em.id}">
											<option vaule="${temp_em.id}" selected="selected">${temp_em.name}</option>
										</c:when> 
										<c:otherwise> 
											<option vaule="${temp_em.id}" >${temp_em.name}</option>
										</c:otherwise> 
									</c:choose>
								</c:forEach>
							</select>
						</td>
				   	   	<td>
				   	   		周期：
					   	   	<input class="Wdate" onFocus="WdatePicker({lang:'zh-cn',dateFmt:'yyyy-MM-dd '})"
							type="text" id="" value= "${listTemp.planBeginTime}" name="planBeginTimes[${s.index}]" />
							——
							<input class="Wdate" onFocus="WdatePicker({lang:'zh-cn',dateFmt:'yyyy-MM-dd '})" 
							type="text" id="" value= "${listTemp.planEndTime}" name="planEndTimes[${s.index}]"/>&nbsp;
							工时：<input type="text" id="" name="planHoursBos[${s.index}]" value = "${listTemp.planHours}" class="input-large required" minlength="1"/>
							
						</td>
				   	   	<td>1</td>
				   	  </tr> 
			   	 </c:forEach>	
		   	</tbody>
			
		</table>
		<div class="form-actions">
			<input id="submit_btn" class="btn btn-primary" type="submit" value="提交"/>&nbsp;	
			<!-- <input id="cancel_btn" class="btn" type="button" value="返回" onclick="history.back()"/> -->
		</div>
	</form>
</body>
</html>
