<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>

<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Insert title here</title>
<style>
	td{
		text-align:center;
	}
</style>
</head>
<body>
	<h4>
	我对${satisfaction.beEvaluatedName}的评价
	</h4>
	<form action="${ctx}/satisfaction/edit" method="post">
		<input name="id" type="hidden" value="${satisfaction.id }" />
		
		<table align="center" border="1px;" style="border-collapse: collapse;width: 800px;" bordercolor="#000000">
			<tr>
				<td>姓名：</td>
				<td>${satisfaction.beEvaluatedName}</td>
				<td></td>
			</tr>
			<tr>
				<td>部门：</td>
				<td>${satisfaction.beEvaluatedDepartmentName}</td>
				<td></td>
			</tr>
			<tr>
				<td>评分</td>
				<td><input id="score" name="score" type="text" value="${satisfaction.score}"/></td>
				<td></td>
			</tr>
			<tr>
				<td>沟通协作</td>
				<td colspan="2"><textarea id="comment" name="comment" rows="3">${satisfaction.comment }</textarea></td>
			</tr>
		</table>
		<div>
			<input type="submit" value="保存" />
		</div>
	</form>
	
</body>

</html>