<%@ page contentType="text/html;charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<c:set var="ctx" value="${pageContext.request.contextPath}" />
<c:set var="staticCtx" value="${pageContext.request.contextPath}/static" />
<html>
<head>
<title>员工专业性得分--查看</title>

<script type="text/javascript">
	
</script>
</head>
<body>
<div >			
		<div id="specialty">	
			<h4 >员工专业---查看</h4>				
			<span>姓名：${employeScoreDetail.beEvaluatedName }</span><br/><br/>	
			<span>部门：${employeScoreDetail.departmentName }</span><br/><br/>
			<span>部门负责人：${employeScoreDetail.mt }</span>&nbsp;&nbsp;&nbsp;&nbsp;
			<span>时间：<fmt:formatDate value="${employeScoreDetail.evaluateTime }" pattern="yyyy-MM-dd HH:mm:ss" /> </span><br/>			
		</div>
		<div>---------------------------------------------------------------------------</div>
		<div>
			<c:forEach var="specialtyJX" items="${employeScoreDetail.specialtyJXList }" >
				<span>${specialtyJX.specialtyName }：
					<c:if test="${specialtyJX.score!=null }">	
							${specialtyJX.score }分							
					</c:if> 				
				</span><br/><br/>			
			</c:forEach>		
			总分：<span>
			<c:if test="${employeScoreDetail.totalScore!=0.0 }">	
					${employeScoreDetail.totalScore }分							
			</c:if> 
			</span><br/><br/>
			评语：<span>${employeScoreDetail.comment }</span><br/>
		</div>
</div>
</body>
</html>
