<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>
<html>
<head>
<script src="${ctx }/static/My97/WdatePicker.js"></script>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>员工管理</title>
</head>
<body>
	<form action="list" method="get" >
		<table align="center">
			<tr>
				<td>上级评价ID:<input type="text" name="search_EQ_id"></td>
				<td>部门：<input type="text" name="search_EQ_departmentName"></td>
			</tr>
			<tr>
				<td>评价者：<input type="text" name="search_EQ_mt"></td>
				<td>总分：<input type="text" name=""></td>
			</tr>
			<tr>
				<td>被评价者：<input type="text" name="search_EQ_beEvaluatedName"></td>
				<td>部门:<input type="text" name=""></td>
			</tr>
			<tr>
				<td>评价时间：<input class="Wdate" id="first" type="text" onfocus="new WdatePicker({lang:'zh-cn',dateFmt:'yyyy-MM-dd'})" name="search_GTE_evaluatedTime"/>
							~
							<input class="Wdate" id="last" type="text" onfocus="new WdatePicker({lang:'zh-cn',dateFmt:'yyyy-MM-dd'})" name="search_LTE_evaluatedTime"/>
				</td>
			</tr>
			<tr>
				<td>
					<button>搜索</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					<input type="button" value="导入员工" class="btn_add" onclick="location.href='addPage';"/>
				</td>
			</tr>
		</table>
	</form>
	
	<table align="center" border="1px;" style="border-collapse: collapse;width: 800px;" bordercolor="#000000">
		<tr>
			<td>序号</td>
			<td>工号</td>
			<td>姓名</td>
			<td>部门</td>
			<td>职位</td>
			<td>是否为MT负责人</td>
			<td>是否为项目经理</td>
			<td>入职时间</td>
			<td>操作</td>
		</tr>
		
	<c:forEach items="${employes.content}" var="employe"  varStatus="status">
	   <tr>
			<td>${status.index+1 }</td>
			<td>${employe.code }</td>
			<td>${employe.name }</td>
			<td>${employe.departmentName }</td>
			<td>${employe.position }</td>
			<td>
				<c:choose>
	                      <c:when test="${employe.isMt==true }">是</c:when>
	                      <c:otherwise>否</c:otherwise>
	            </c:choose>
			</td>
			<td>
				<c:choose>
	                      <c:when test="${employe.isPm==true }">是</c:when>
	                      <c:otherwise>否</c:otherwise>
	            </c:choose>
			</td>
			<td><fmt:formatDate value="${employe.employmentDate }" pattern="yyyy-MM-dd"/></td>
			<td>
				 <input type="button" value="查看" class="btn_view" onclick="location.href='view/${employe.id }';"/>
	             <input type="button" value="编辑" class="btn_modify" onclick="location.href='editPage/${employe.id }';" />
			</td>
		</tr>
	</c:forEach>
	</table> 
</body>

</html>