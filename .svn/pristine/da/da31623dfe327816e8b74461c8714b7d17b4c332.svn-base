<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<c:set var="ctx" value="${pageContext.request.contextPath}"/>

<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Insert title here</title>
<style>
	td{
		text-align:center;
	}
</style>
<script language="javascript">
function cancle(projectId) {
	window.location.href='${ctx}/satisfaction/list/'+projectId;
}
</script>
</head>
<body>
	<h4>
	我对${satisfaction.beEvaluatedName}的评价
	</h4>
	<form action="${ctx}/satisfaction/edit" method="post">
		<input name="id" type="hidden"  value="${satisfaction.id }" />
		<input name="projectId" type="hidden" value="${satisfaction.projectId }" />
		<input name="projectName" type="hidden" value="${satisfaction.projectName }" />
		<input name="evaluatedId" type="hidden" value="${satisfaction.evaluatedId }" />
		<input name="evaluatedName" type="hidden" value="${satisfaction.evaluatedName }" />
		<input name="evaluatedDepartmentId" type="hidden" value="${satisfaction.evaluatedDepartmentId}" />
		<input name="beEvaluatedId" type="hidden"  value="${satisfaction.beEvaluatedId }" />
		<input name="beEvaluatedDepartmentId" type="hidden" value="${satisfaction.beEvaluatedDepartmentId }" />
		<input name="evaluatedTime" type="hidden" value="${satisfaction.evaluatedTime }" />
		<input name="createTime" type="hidden" value="${satisfaction.createTime}" />
		<input name="beEvaluatedName" type="hidden" value="${satisfaction.beEvaluatedName}" />
		<input name="beEvaluatedDepartmentName"  value="${satisfaction.beEvaluatedDepartmentName}" />
		
		<table align="center" border="1px;" style="border-collapse: collapse;width: 800px;" bordercolor="#000000">
			<tr>
				<td>姓名：</td>
				<td>${satisfaction.beEvaluatedName}</td>
			</tr>
			<tr>
				<td>部门：</td>
				<td>${satisfaction.beEvaluatedDepartmentName}</td>
			</tr>
			<tr>
				<td>评分</td>
				<td><input id="score" name="score" type="text" value="${satisfaction.score}"/></td>
			</tr>
			<tr>
				<td>沟通协作</td>
				<td><textarea id="comment" name="comment" rows="3">${satisfaction.comment }</textarea></td>
			</tr>
		</table>
		<div>
			<input type="submit" value="保存" />
			<input type="button" value="取消" onclick="cancle(${satisfaction.projectId})"/>
		</div>
	</form>
	
</body>

</html>